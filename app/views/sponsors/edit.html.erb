<h3>Edit sponsor</h3>
<%= simple_form_for(@sponsor, :html => {:class => 'form-horizontal form-validate' }) do |f| %>
	<%= f.error_notification %>
	<div class="control-group">
		<%= f.label :name, :class => 'control-label' %>
		<div class="controls">
			<%= f.input_field :name, :class => 'input-xxlarge' %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :website, :class => 'control-label' %>
		<div class="controls">
			<%= f.input_field :website, :class => 'input-xxlarge' %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :phone, :class => 'control-label' %>
		<div class="controls">
			<%= f.input_field :phone, :class => 'input-xxlarge' %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :description, :class => 'control-label' %>
		<div class="controls">
			<%= f.text_area :description, cols:40, rows:5, :class => 'input-xxlarge' %>
		</div>
	</div>
	<fieldset>
		<legend>Address</legend>
		<div class="control-group">
			<%= f.label :street, :class => 'control-label' %>
			<div class="controls">
				<%= f.input_field :street, :class => 'input-xxlarge' %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :street2, "Suite/Apt/Building (if necessary)", :class => 'control-label' %>
			<div class="controls">
				<%= f.input_field :street2, :class => 'input-xxlarge' %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :city, :class => 'control-label' %>
			<div class="controls">
				<%= f.input_field :city, :class => 'input-xxlarge' %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :state, :class => 'control-label' %>
			<div class="controls">
				<%= f.select :state, options_for_select(us_states, @sponsor.state), {}, {:class => 'input-xxlarge'} %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :zipcode, :class => 'control-label' %>
			<div class="controls">
				<%= f.input_field :zipcode, :class => 'input-xxlarge' %>
			</div>
		</div>
	</fieldset>
	<fieldset>
		<legend>Logo</legend>
		<div class="control-group">
			<%= f.label :logo, "Upload file", :class => "control-label" %>
			<div class="controls">
				<%= f.input_field :logo, :class => "input-block-level" %>
			</div>
		</div>		
	</fieldset>
	<div class="form-actions">
		<%= f.button :submit, 'Update sponsor', :class => 'btn btn-primary' %>
	</div>
<% end %>